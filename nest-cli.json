{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/learn-nestjs/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/learn-nestjs/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/learn-nestjs",
  "projects": {
    "learn-nestjs": {
      "type": "application",
      "root": "apps/learn-nestjs",
      "entryFile": "main",
      "sourceRoot": "apps/learn-nestjs/src",
      "compilerOptions": {
        "tsConfigPath": "apps/learn-nestjs/tsconfig.app.json"
      }
    },
    "logging": {
      "type": "application",
      "root": "apps/logging",
      "entryFile": "main",
      "sourceRoot": "apps/logging/src",
      "compilerOptions": {
        "tsConfigPath": "apps/logging/tsconfig.app.json"
      }
    },
    "typeorm-pg": {
      "type": "application",
      "root": "apps/typeorm-pg",
      "entryFile": "main",
      "sourceRoot": "apps/typeorm-pg/src",
      "compilerOptions": {
        "tsConfigPath": "apps/typeorm-pg/tsconfig.app.json"
      }
    },
    "authentication": {
      "type": "application",
      "root": "apps/authentication",
      "entryFile": "main",
      "sourceRoot": "apps/authentication/src",
      "compilerOptions": {
        "tsConfigPath": "apps/authentication/tsconfig.app.json"
      }
    }
  }
}